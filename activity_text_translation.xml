<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_height="match_parent"
    tools:context=".TextTranslationActivity">

    <EditText
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:padding="20dp"
        android:id="@+id/transtext"
        android:hint="Enter text to be translated"
        android:textColorHint="#555555"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Spinner
            android:padding="10dp"
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/lang_names"
            android:prompt="@string/lang_select"/>

    <Button
        android:id="@+id/transbtn"
        android:paddingHorizontal="10dp"
        android:text="Translate"
        android:textColor="#ffffff"
        android:background="#046ee8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    </LinearLayout>

    <TextView
        android:layout_margin="@dimen/activity_vertical_margin"
        android:padding="15dp"
        android:id="@+id/ttext"
        android:text="Translated Text"
        android:textColor="#444444"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_margin="20dp"
        android:padding="20dp"
        android:id="@+id/spkbtn"
        android:textColor="#ffffff"
        android:background="#046ee8"
        android:text="Speak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>